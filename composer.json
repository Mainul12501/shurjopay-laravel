{
    "name": "mainul/shurjopay-laravel",
    "description": "A package for handling ShurjoPay payment gateway in Laravel applications.",
    "keywords": [
        "laravel",
        "ShrujoPay",
        "CGIT",
        "payment-gateway",
        "online-payment"
      ],
	  "type": "package",
    "require": {
        "php": ">=7.2",
        "laravel/framework": ">=6.0",
        "ext-curl": "*",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": ">=6.5.5"
    },
    "require-dev": {
        "orchestra/testbench": ">=3.6"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Muhammad Ali",
            "email": "mainul12501@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": {
            "mainul\\Shurjopay\\": "src"
        }

    },
    "extra": {
        "laravel": {
          "providers": [
            "mainul\\ShurjoPay\\ShurjoPayServiceProvider"
          ]
        }
      }
}
